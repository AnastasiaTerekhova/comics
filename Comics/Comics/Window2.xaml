<Window x:Class="Comics.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comics"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Comics" MinWidth="1050" MinHeight="550"
        >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="711*"/>
                <ColumnDefinition Width="281*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="305*"/>
                <RowDefinition Height="91*"/>
                <RowDefinition Height="73"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid Grid.ColumnSpan="1" Grid.Column="0" Grid.RowSpan="1" Grid.Row="0">
                <Image x:Name="image" Margin="10"/>
                <Canvas></Canvas>
            </Grid>
            <Grid Grid.ColumnSpan="1" Grid.Column="1" Grid.RowSpan="2" Grid.Row="2">
                <Button Content="Сохранить" Height="Auto" Margin="20,19,20,23"></Button>
            </Grid>
            <Grid Grid.ColumnSpan="1" Grid.Column="0" Grid.RowSpan="2" Grid.Row="2" >
                <Button x:Name="Add" Click="AddButton_Click" Content="Добавить" Height="35" Width="150" 
                    Margin="10,20,350,22"/>
                <Button Content="Удалить" Height="35" Width="150"  
                    Margin="350,20,10,22"/>
            </Grid>
            <Grid Grid.ColumnSpan="1" Grid.Column="0" Grid.RowSpan="1" Grid.Row="1">
            <ScrollViewer x:Name="scrollViewer" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled"  
                            Margin="5,5,5,5" >
                    <StackPanel x:Name="stackPanel" Margin="3,3,3,3"/>
            </ScrollViewer>
            </Grid>
            <Grid Grid.ColumnSpan="2" Grid.Column="2" Grid.RowSpan="1" Grid.Row="0" Background="Aquamarine">
                <Button Background="Black" x:Name="btnColor1" Click="BtnColor_Click"
                                Style="{StaticResource MaterialDesignFloatingActionLightButton}" 
                        ToolTip="MaterialDesignFloatingActionLightButton" Width="30" Height="30" BorderBrush="Black">
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
